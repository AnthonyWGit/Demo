{% extends 'base.html.twig' %}

{% block title %}Corporation details{% endblock %}

{% block body %}

    <h2>{{ entreprise.raisonSociale }}</h2>
    <p> {{ entreprise }}</p>
    <p>This is corpo detail</p>

    <p>Adresse complete usage</p>
    <p> {{entreprise.getAdresseComplete}} </p>

    <p>Creation date</p>
    <p> {{entreprise.getDateCreationFr }} </p>

    <p>with twig pipe date</p>
    <p> {{entreprise.getDateCreation |date("d/m/Y")}}</p>

    <h3>Employees list</h3>
    {% if entreprise.employes |length > 0 %}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Employee</th>
                </tr>
            </thead>
            <tbody>
                {% for employe in entreprise.employes %}
                    <tr><td><a href=" {{path("display_app_employe" , {'id' : employe.id }) }}"> {{employe}} </a><br> </td></tr>
                {% endfor %}                
            </tbody>
        </table>
    {% else %}
        <p>There is no employees in this company</p>
    {% endif %}


{% endblock %}
